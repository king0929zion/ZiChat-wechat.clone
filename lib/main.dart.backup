    return Container(
      color: const Color(0xFFEDEDED),
      child: ListView.builder(
        padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 12),
        itemCount: _chatDetailMessages.length,
        itemBuilder: (context, index) {
          final message = _chatDetailMessages[index];

          if (message.type == 'timestamp') {
            return Padding(
              padding: const EdgeInsets.symmetric(vertical: 5),
              child: Center(
                child: Text(
                  message.text ?? '',
                  style: const TextStyle(
                    fontSize: 12,
                    color: Color(0xFFB2B2B2),
                  ),
                ),
              ),
            );
          }

          if (message.type == 'system' || message.type == 'recall') {
            return Padding(
              padding: const EdgeInsets.symmetric(vertical: 5),
              child: Center(
                child: Text(
                  message.text ?? '',
                  style: const TextStyle(
                    fontSize: 13,
                    color: Color(0xFFB2B2B2),
                  ),
                ),
              ),
            );
          }

          final bool isOutgoing = message.direction == 'out';
          final String avatar = message.avatar ??
              (isOutgoing ? 'assets/avatar.png' : 'assets/me.png');

          final rowChildren = <Widget>[
            _ChatDetailAvatar(avatar: avatar),
            const SizedBox(width: 8),
            Expanded(
              child: _ChatDetailMessageContent(
                message: message,
                isOutgoing: isOutgoing,
              ),
            ),
          ];

          return Padding(
            padding: const EdgeInsets.only(bottom: 14),
            child: Row(
              mainAxisAlignment: isOutgoing
                  ? MainAxisAlignment.end
                  : MainAxisAlignment.start,
              crossAxisAlignment: CrossAxisAlignment.start,
              children:
                  isOutgoing ? rowChildren.reversed.toList() : rowChildren,
            ),
          );
        },
      ),
    );
  }
}

