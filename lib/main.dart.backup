    final children = <Widget>[];

    if (!isOutgoing && (message.name ?? '').isNotEmpty) {
      children.add(
        Padding(
          padding: const EdgeInsets.only(left: 4, bottom: 4),
          child: Text(
            message.name!,
            style: const TextStyle(
              fontSize: 11,
              color: Color(0xFF86909C),
            ),
          ),
        ),
      );
    }

    children.add(bubble);

    return Align(
      alignment: isOutgoing ? Alignment.centerRight : Alignment.centerLeft,
      child: ConstrainedBox(
        constraints: const BoxConstraints(maxWidth: 300),
        child: Column(
          crossAxisAlignment:
              isOutgoing ? CrossAxisAlignment.end : CrossAxisAlignment.start,
          children: children,
        ),
      ),
    );
  }
}

class _ChatDetailBubble extends StatelessWidget {
  const _ChatDetailBubble({
    required this.message,
    required this.isOutgoing,
  });

  final _ChatDetailMessage message;
  final bool isOutgoing;

  @override
  Widget build(BuildContext context) {
    switch (message.type) {
      case 'image':
        return _ImageBubble(
          imageAsset: message.image ?? 'assets/add-contacts-bg.jpeg',
        );
      case 'voice':
        return _VoiceBubble(
          message: message,
          isOutgoing: isOutgoing,
        );
      case 'red-packet':
        return _RedPacketBubble(
          message: message,
          isOutgoing: isOutgoing,
        );
      case 'transfer':
        return _TransferBubble(
          message: message,
          isOutgoing: isOutgoing,
        );
      default:
        return _TextBubble(
          message: message,
          isOutgoing: isOutgoing,
        );
    }
  }
}

